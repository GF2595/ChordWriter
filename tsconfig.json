{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "paths": {
            "@common/*": ["src/components/common/*"],
            "@components/*": ["src/components/*"],
            "@stylesheets/*": ["src/stylesheets/*"],
            "@model/*": ["src/model/*"],
            "@utils/*": ["src/utils/*"],
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"]
}
